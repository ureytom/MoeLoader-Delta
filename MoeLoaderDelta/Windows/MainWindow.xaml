                            ToolTip="起始页码">
                            <TextBox
                                x:Name="txtPage"
                                Width="50"
                                Margin="5,5,0,4"
                                x:FieldModifier="private"
                                InputMethod.IsInputMethodEnabled="False"
                                LostFocus="TxtPage_LostFocus"
                                MaxLength="5"
                                PreviewKeyDown="TxtPage_PreviewKeyDown"
                                Style="{DynamicResource SimpleTextBox}"
                                Text="1"
                                TextChanged="TxtNum_TextChanged" />
                            <Button
                                x:Name="pageUp"
                                Width="15"
                                Margin="0,5,0,4"
                                x:FieldModifier="private"
                                BorderThickness="1"
                                Click="PageUp_Click"
                                Content="˄"
                                Style="{DynamicResource SimpleButton}" />
                            <Button
                                x:Name="pageDown"
                                Width="15"
                                Margin="0,5,0,4"
                                x:FieldModifier="private"
                                BorderThickness="1"
                                Click="PageDown_Click"
                                Content="˅"
                                Style="{DynamicResource SimpleButton}" />
                        </StackPanel>
                        <TextBlock
                            x:Name="textBlock1"
                            Margin="150,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource glowT}"
                            Text="每页数量" />
                        <StackPanel
                            x:Name="stackPanel1"
                            Width="100"
                            Margin="204,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            ToolTip="每页搜索的图片数量">
                            <TextBox
                                x:Name="txtNum"
                                Width="50"
                                Margin="5,5,0,4"
                                x:FieldModifier="private"
                                InputMethod.IsInputMethodEnabled="False"
                                LostFocus="TxtPage_LostFocus"
                                MaxLength="3"
                                PreviewKeyDown="TxtPage_PreviewKeyDown"
                                Style="{DynamicResource SimpleTextBox}"
                                Text="50"
                                TextChanged="TxtNum_TextChanged" />
                            <Button
                                x:Name="numUp"
                                Width="15"
                                Margin="0,5,0,4"
                                x:FieldModifier="private"
                                BorderThickness="1"
                                Click="NumUp_Click"
                                Content="˄"
                                Style="{DynamicResource SimpleButton}" />
                            <Button
                                x:Name="numDown"
                                Width="15"
                                Margin="0,5,0,4"
                                x:FieldModifier="private"
                                BorderThickness="1"
                                Click="NumDown_Click"
                                Content="˅"
                                Style="{DynamicResource SimpleButton}" />
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid
                    x:Name="logoGrd"
                    Height="60"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Image
                        x:Name="image"
                        Width="120"
                        Height="60"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.50,0.50"
                        Source="../Images/logo1.png"
                        Stretch="None" />
                    <Image
                        Width="160"
                        Height="60"
                        Margin="110,10,0,0"
                        HorizontalAlignment="Left"
                        Source="../Images/logo3.png" />
                </Grid>
                <Border
                    x:Name="bgLoading"
                    Width="300"
                    Height="3"
                    Margin="-300,70,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Border.Background>
                        <LinearGradientBrush Opacity="1" StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="0" Color="#00FFFFFF" />
                            <GradientStop Offset="0.5" Color="#993585E4" />
                            <GradientStop Offset="1" Color="#00FFFFFF" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <Grid
                Margin="0,7,130,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <TextBlock
                    x:Name="txtSetting"
                    Margin="0"
                    Cursor="Hand"
                    FontSize="12"
                    MouseDown="TextBlock_MouseDown1"
                    Style="{StaticResource glowT}"
                    Text="设定" />
                <TextBlock
                    Margin="28,0,0,0"
                    FontSize="12"
                    Opacity=".3"
                    Style="{StaticResource glowT}"
                    Text="|" />
                <TextBlock
                    x:Name="txtHelp"
                    Margin="36,0,0,0"
                    Cursor="Hand"
                    FontSize="12"
                    MouseDown="TextBlock_MouseDown2"
                    Style="{StaticResource glowT}"
                    Text="帮助" />
                <TextBlock
                    Margin="64,0,0,0"
                    FontSize="12"
                    Opacity=".3"
                    Style="{StaticResource glowT}"
                    Text="|" />
                <TextBlock
                    x:Name="txtUpdateInfo"
                    Margin="73,0,0,0"
                    Cursor="Hand"
                    FontSize="12"
                    MouseDown="TextBlock_MouseDownUpdateInfo"
                    Style="{StaticResource glowT}"
                    Text="更新历史" />
                <TextBlock
                    Margin="126,0,0,0"
                    FontSize="12"
                    Opacity=".3"
                    Style="{StaticResource glowT}"
                    Text="|" />
                <TextBlock
                    x:Name="txtDonate"
                    Margin="135,0,0,0"
                    Cursor="Hand"
                    FontSize="12"
                    MouseDown="TextBlock_MouseDownDonate"
                    Style="{StaticResource glowT}"
                    Text="捐赠" />
            </Grid>
            <Border
                Height="25"
                Margin="-3,0,-3,-3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Background="{StaticResource ColorThemeBlue}">
                <Grid>
                    <TextBlock
                        x:Name="statusText"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Style="{StaticResource glowT}"
                        Text="输入关键词标签进行图片搜索、无关键词将直接搜索最新图片" />
                    <TextBlock
                        x:Name="siteText"
                        Margin="0,0,290,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Style="{StaticResource glowT}"
                        Text="当前站点 yande" />
                    <TextBlock
                        x:Name="pageText"
                        Margin="0,0,170,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Style="{StaticResource glowT}"
                        Text="当前页码 0" />
                    <TextBlock
                        x:Name="selText"
                        Margin="0,0,50,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Style="{StaticResource glowT}"
                        Text="选中图片 0" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>